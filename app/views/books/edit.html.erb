<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

<%= render 'form', book: @book %>

<%= link_to 'Show', @book %>
<%= link_to 'Back', books_path %>

<% end %>